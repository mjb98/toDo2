<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignEnd="@+id/shotask_ok_button"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:fontFamily="serif"
        android:text="Preview"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/edittask_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerInParent="false"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@+id/textView2"
        android:textSize="18sp"
        tools:text="Description" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:fontFamily="sans-serif-condensed"
        android:text="DESCRIPTION:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed"
        android:text="DATE:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed"
        android:text="TIME:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Edittask_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittask_description"
        android:layout_alignLeft="@+id/edittask_description"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"
        tools:text="Date" />

    <TextView
        android:id="@+id/edittask_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Edittask_date"
        android:layout_alignLeft="@+id/Edittask_date"
        android:layout_alignParentStart="false"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        tools:text="Time" />

    <Button
        android:id="@+id/shotask_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittask_time"
        android:layout_alignEnd="@+id/edittask_description"
        android:layout_alignRight="@+id/edittask_description"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:text="OK" />

    <CheckBox
        android:id="@+id/showtask_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittask_time"
        android:layout_alignBottom="@+id/shotask_ok_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/shotask_ok_button"
        android:text="@string/done" />

    <ImageButton
        android:id="@+id/sharebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        app:srcCompat="@android:drawable/ic_menu_share" />
</RelativeLayout>